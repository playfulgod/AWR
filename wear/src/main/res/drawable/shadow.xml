<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ff000000" />

            <corners android:radius="15.0dip" />
        </shape>
    </item>
    <item
        android:bottom="3.0px"
        android:left="3.0px"
        android:right="3.0px"
        android:top="3.0px">
        <shape android:shape="rectangle" >
            <solid android:color="#ff222222" />

            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180.0"
                android:centerColor="#00222222"
                android:centerX="0.9"
                android:endColor="#99000000"
                android:startColor="#00222222" />

            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360.0"
                android:centerColor="#00222222"
                android:centerX="0.9"
                android:endColor="#99000000"
                android:startColor="#00222222" />

            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90.0"
                android:centerColor="#00222222"
                android:centerY="0.9"
                android:endColor="#00222222"
                android:startColor="#99000000"
                android:type="linear" />

            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90.0"
                android:centerColor="#00222222"
                android:centerY="0.9"
                android:endColor="#00222222"
                android:startColor="#99000000"
                android:type="linear" />

            <corners android:radius="8.0dip" />
        </shape>
    </item>

</layer-list>